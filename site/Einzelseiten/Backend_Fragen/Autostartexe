@echo off
REM Start Apache Server (XAMPP)
start "" "C:\xampp\apache_start.bat" > "C:\xampp\apache_start_log.txt" 2>&1

REM Start PocketBase Server
start "" "C:\pocketbase\pocketbase.exe" serve --http="0.0.0.0:8100" > "C:\pocketbase\pocketbase_log.txt" 2>&1

REM Warte 10 Sekunden, um sicherzustellen, dass die Server gestartet sind
timeout /t 10 /nobreak >nul

REM Ã–ffne die Quiz-Seite im Vollbildmodus
start "" "C:\Program Files (x86)\Microsoft\Edge\Application\msedge.exe" --kiosk http://10.1.10.204:8090 --edge-kiosk-type=fullscreen
